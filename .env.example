PORT=5000
NODE_ENV=development

# SurrealDB Configuration
# For local development:
# SURREAL_HOST=127.0.0.1
# SURREAL_PORT=8000
# For production instance:
SURREAL_URL=wss://your-production-instance.surrealdb.cloud
SURREAL_USER=your-username
SURREAL_PASS=your-password
SURREAL_NS=scoutnetworking
SURREAL_DB=main

# JWT Secrets (Generate strong secrets in production)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15